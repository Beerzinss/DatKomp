@model DatKomp.Models.ProductListViewModel

@{
    ViewData["Title"] = "Produkti";
}

<h1 class="mb-4">Produkti</h1>

@if (!Model.Products.Any())
{
    <p class="text-gray-600">Nothing found.</p>
}
else if (string.IsNullOrEmpty(Model.CurrentCategory))
{
    <div class="grid grid-cols-4 gap-5">
        @foreach (var item in Model.Products)
        {
            <div class="col">
                <a asp-action="Details" asp-route-id="@item.Id" class="block no-underline text-inherit transform transition-transform duration-200 ease-out hover:scale-105">
                    <div class="card h-100 cursor-pointer hover:shadow-lg transition-shadow">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                        }
                        <div class="card-body">
                            <h5 class="font-bold text-xl">@item.Name</h5>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <p class="card-text">@item.Description</p>
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="flex gap-6">
        <aside class="w-1/5 bg-gray-50 p-4 rounded border border-gray-200">
            <h2 class="font-bold mb-3">Filtrs pēc specifikācijām</h2>

            <form method="get" asp-action="Index">
                <input type="hidden" name="category" value="@Model.CurrentCategory" />

                @foreach (var group in Model.SpecFilters)
                {
                    if (group.Options.Any())
                    {
                        <div class="mb-3">
                            <div class="font-semibold mb-1">@group.Key</div>
                            @foreach (var option in group.Options)
                            {
                                var valueKey = $"{group.Key}|{option.Value}";
                                <label class="flex items-center text-sm mb-1">
                                    <input
                                        type="checkbox"
                                        name="specFilters"
                                        value="@valueKey"
                                        @(option.Selected ? "checked" : null)
                                        class="mr-2" />
                                    <span>
                                        @option.Value
                                        @if (!string.IsNullOrEmpty(option.Unit))
                                        {
                                            <span class="text-gray-500"> (@option.Unit)</span>
                                        }
                                    </span>
                                </label>
                            }
                        </div>
                    }
                }

                <div class="flex gap-2 mt-4">
                    <button type="submit" class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700 text-sm">Filtrēt</button>
                    <a asp-action="Index" asp-route-category="@Model.CurrentCategory" class="text-sm text-gray-600 hover:underline">Notīrīt filtrus</a>
                </div>
            </form>
        </aside>

        <div class="flex-1">
            <div class="grid grid-cols-3 gap-5">
                @foreach (var item in Model.Products)
                {
                    <div class="col">
                        <a asp-action="Details" asp-route-id="@item.Id" class="block no-underline text-inherit transform transition-transform duration-200 ease-out hover:scale-105">
                            <div class="card h-100 cursor-pointer hover:shadow-lg transition-shadow">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                                }
                                <div class="card-body">
                                    <h5 class="font-bold text-xl">@item.Name</h5>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <p class="card-text">@item.Description</p>
                                    }
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}

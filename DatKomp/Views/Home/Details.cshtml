@model DatKomp.Models.ProductDetailsViewModel



<div class="container mx-auto">
    
    <div class="pb-5 font-semibold">
        <a asp-action="Index" class="btn btn-secondary">Atpakal uz produktu sarakstu</a>
    </div>
    <div class="card flex flex-col md:flex-row gap-24">
        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
        {
            <img src="@Model.Product.ImageUrl" class="card-img-top mb-4 max-w-md" alt="@Model.Product.Name" />
        }
        <div class="card-body flex flex-col gap-10">
            <h1 class="mb-4 text-3xl font-bold pt-14">@Model.Product.Name</h1>
            <div class=""> 
                @if (!string.IsNullOrEmpty(Model.Product.Description))
                {
                    <p class="mb-3">@Model.Product.Description</p>
                }
                <div>
                    <p class="mb-1"><strong>Cena:</strong> @Model.Product.Price.ToString("0.00") €</p>
                    <p class="mb-1"><strong>Pieejams daudzums:</strong> @Model.Product.StockQty</p>
                </div>
                <form asp-controller="Cart" asp-action="Add" method="post">
                    <input type="hidden" name="productId" value="@Model.Product.Id" />
                    <button type="submit" class="mt-4 bg-blue-600 text-white px-8 py-2 rounded-xl hover:bg-blue-700 transition-colors flex gap-4 items-center">
                        <span>Pievienot grozam</span>
                        <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" aria-hidden="true">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shopping-cart-icon lucide-shopping-cart"><circle cx="8" cy="21" r="1"/><circle cx="19" cy="21" r="1"/><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/></svg>
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </div>

    @if (Model.Specs.Any())
    {
        <div class="mt-6">
            <h2 class="text-2xl font-semibold mb-2">Specifikācija</h2>
            <table class="table-auto border-collapse w-full">
                <tbody>
                @foreach (var spec in Model.Specs)
                {
                    <tr class="border-b">
                        <td class="py-2 pr-4 font-medium">@spec.SpecName</td>
                        <td class="py-2">
                            @spec.SpecValue@if (!string.IsNullOrEmpty(spec.Unit)) { @(" " + spec.Unit) }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }

    
</div>

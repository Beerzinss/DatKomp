@model DatKomp.Models.ProductDetailsViewModel



<div class="container mx-auto">
    
    <div class="pb-5 font-semibold">
        <a asp-action="Index" class="btn btn-secondary">Atpakal uz produktu sarakstu</a>
    </div>
    <div class="card flex gap-24">
        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
        {
            <img src="@Model.Product.ImageUrl" class="card-img-top mb-4 max-w-md" alt="@Model.Product.Name" />
        }
        <div class="card-body flex flex-col gap-10">
            <h1 class="mb-4 text-3xl font-bold pt-14">@Model.Product.Name</h1>
            <div class=""> 
                @if (!string.IsNullOrEmpty(Model.Product.Description))
                {
                    <p class="mb-3">@Model.Product.Description</p>
                }
                <div>
                    <p class="mb-1"><strong>Cena:</strong> @Model.Product.Price.ToString("0.00") €</p>
                    <p class="mb-1"><strong>Pieejams daudzums:</strong> @Model.Product.StockQty</p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Specs.Any())
    {
        <div class="mt-6">
            <h2 class="text-2xl font-semibold mb-2">Specifikācija</h2>
            <table class="table-auto border-collapse w-full">
                <tbody>
                @foreach (var spec in Model.Specs)
                {
                    <tr class="border-b">
                        <td class="py-2 pr-4 font-medium">@spec.SpecName</td>
                        <td class="py-2">
                            @spec.SpecValue@if (!string.IsNullOrEmpty(spec.Unit)) { @(" " + spec.Unit) }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }

    
</div>

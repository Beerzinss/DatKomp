@model IEnumerable<DatKomp.Models.AdminOrderSummary>

@{
    ViewData["Title"] = "Pasūtījumi";
}

<h1 class="mb-4 text-2xl font-bold">Visi pasūtījumi</h1>

<div class="w-full overflow-x-auto">
    <table class="table-auto w-full border-collapse">
        <thead>
            <tr class="border-b">
                <th class="text-left py-2 px-2">ID</th>
                <th class="text-left py-2 px-2">Datums</th>
                <th class="text-left py-2 px-2">Klients</th>
                <th class="text-left py-2 px-2">E-pasts</th>
                <th class="text-right py-2 px-2">Preces</th>
                <th class="text-right py-2 px-2">Piegāde</th>
                <th class="text-right py-2 px-2">Kopā</th>
                <th class="text-left py-2 px-2">Statuss</th>
                <th class="text-left py-2 px-2">Darbības</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var o in Model)
        {
            <tr class="border-b">
                <td class="py-2 px-2">@o.Id</td>
                <td class="py-2 px-2">@o.CreatedAtUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td class="py-2 px-2">@o.CustomerName</td>
                <td class="py-2 px-2">@o.Email</td>
                <td class="py-2 px-2 text-right">@o.ItemsTotal.ToString("0.00") €</td>
                <td class="py-2 px-2 text-right">@o.DeliveryPrice.ToString("0.00") €</td>
                <td class="py-2 px-2 text-right">@o.GrandTotal.ToString("0.00") €</td>
                <td class="py-2 px-2">@o.StatusName</td>
                <td class="py-2 px-2">
                    <a class="text-blue-600 hover:underline" asp-action="OrderDetails" asp-route-id="@o.Id">Skatīt</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

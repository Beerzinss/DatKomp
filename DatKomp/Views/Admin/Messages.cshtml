@model IEnumerable<DatKomp.Models.ContactMessage>

@{
    ViewData["Title"] = "Ziņas";
}

<h1 class="mb-4 text-2xl font-bold">Ziņas no klientiem</h1>

@if (!Model.Any())
{
    <p>Nav nevienas ziņas.</p>
}
else
{
    <table class="table-auto w-full border-collapse">
        <thead>
            <tr class="border-b">
                <th class="text-left py-2 px-2">Datums</th>
                <th class="text-left py-2 px-2">Lietotājs ID</th>
                <th class="text-left py-2 px-2">E-pasts</th>
                <th class="text-left py-2 px-2">Ziņa</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var m in Model)
        {
            <tr class="border-b align-top">
                <td class="py-2 px-2">@m.CreatedAtUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td class="py-2 px-2">@m.UserId</td>
                <td class="py-2 px-2">@m.Email</td>
                <td class="py-2 px-2 whitespace-pre-wrap">@m.Content</td>
            </tr>
        }
        </tbody>
    </table>
}

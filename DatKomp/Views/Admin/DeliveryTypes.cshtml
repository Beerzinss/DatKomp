@model IEnumerable<DatKomp.Models.DeliveryType>

@{
    ViewData["Title"] = "Piegādes veidi";
}

<h1 class="mb-4 text-2xl font-bold">Piegādes veidi</h1>

@if (TempData["AdminFlash"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="mb-3 rounded border border-green-200 bg-green-50 px-3 py-2 text-green-800 text-sm">
        @msg
    </div>
}

<p class="mb-3">
    <a class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700" asp-action="EditDeliveryType">Pievienot piegādes veidu</a>
</p>

<div class="w-full overflow-x-auto">
    <table class="table-auto w-full border-collapse">
        <thead>
            <tr class="border-b">
                <th class="text-left py-2 px-2">ID</th>
                <th class="text-left py-2 px-2">Nosaukums</th>
                <th class="text-left py-2 px-2">Apraksts</th>
                <th class="text-right py-2 px-2">Cena</th>
                <th class="text-left py-2 px-2">Aktīvs</th>
                <th class="text-left py-2 px-2">Darbības</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var t in Model)
        {
            <tr class="border-b">
                <td class="py-2 px-2">@t.Id</td>
                <td class="py-2 px-2">@t.Name</td>
                <td class="py-2 px-2">@t.Description</td>
                <td class="py-2 px-2 text-right">@t.Price.ToString("0.00") €</td>
                <td class="py-2 px-2">@(t.IsActive ? "Jā" : "Nē")</td>
                <td class="py-2 px-2">
                    <a class="text-blue-600 hover:underline" asp-action="EditDeliveryType" asp-route-id="@t.Id">Rediģēt</a>
                    <form asp-action="DeleteDeliveryType" method="post" class="inline">
                        <input type="hidden" name="id" value="@t.Id" />
                        <button type="submit" class="text-red-600 hover:underline ml-2" onclick="return confirm('Vai tiešām dzēst šo piegādes veidu?');">Dzēst</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

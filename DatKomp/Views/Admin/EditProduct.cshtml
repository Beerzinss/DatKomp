@model DatKomp.Models.ProductEditViewModel

@{
    ViewData["Title"] = Model.Product.Id == 0 ? "Jauns produkts" : "Rediģēt produktu";
}

<h1 class="mb-4 text-2xl font-bold">@ViewData["Title"]</h1>

<form asp-action="EditProduct" method="post" class="space-y-6">
    <input type="hidden" asp-for="Product.Id" />

    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

    <div>
        <label asp-for="Product.Name" class="block font-semibold mb-1"></label>
        <input asp-for="Product.Name" class="w-full border rounded px-2 py-1" />
        <span asp-validation-for="Product.Name" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Product.Description" class="block font-semibold mb-1"></label>
        <textarea asp-for="Product.Description" class="w-full border rounded px-2 py-1" rows="3"></textarea>
        <span asp-validation-for="Product.Description" class="text-red-600 text-sm"></span>
    </div>

    <div class="grid grid-cols-3 gap-4">
        <div>
            <label asp-for="Product.Price" class="block font-semibold mb-1"></label>
            <input asp-for="Product.Price" type="number" step="0.01" min="0" class="w-full border rounded px-2 py-1" />
            <span asp-validation-for="Product.Price" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="Product.StockQty" class="block font-semibold mb-1"></label>
            <input asp-for="Product.StockQty" type="number" step="1" min="0" class="w-full border rounded px-2 py-1" />
            <span asp-validation-for="Product.StockQty" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="Product.ImageUrl" class="block font-semibold mb-1"></label>
            <input asp-for="Product.ImageUrl" class="w-full border rounded px-2 py-1" />
            <span asp-validation-for="Product.ImageUrl" class="text-red-600 text-sm"></span>
        </div>
    </div>

    <div>
        <h2 class="font-semibold mb-2">Kategorijas</h2>
        <div class="grid grid-cols-3 gap-2">
            @foreach (var c in Model.AllCategories)
            {
                var isChecked = Model.SelectedCategoryIds.Contains(c.Id);
                <label class="flex items-center text-sm">
                    <input type="checkbox" name="SelectedCategoryIds" value="@c.Id" @(isChecked ? "checked" : null) class="mr-2" />
                    <span>@c.Name</span>
                </label>
            }
        </div>
    </div>

    <div>
        <h2 class="font-semibold mb-2">Specifikācijas</h2>
        <div id="specRows" class="space-y-2" data-next-index="@Model.Specs.Count">
            @for (var i = 0; i < Model.Specs.Count; i++)
            {
                <div class="grid grid-cols-3 gap-2">
                    <input type="hidden" asp-for="Specs[i].Id" />
                    <input type="hidden" asp-for="Specs[i].ProductId" />
                    <div>
                        <label class="block text-xs text-gray-600">Nosaukums</label>
                        <input asp-for="Specs[i].SpecName" class="w-full border rounded px-2 py-1 text-sm spec-name" />
                    </div>
                    <div>
                        <label class="block text-xs text-gray-600">Vērtība</label>
                        <input asp-for="Specs[i].SpecValue" class="w-full border rounded px-2 py-1 text-sm spec-value" />
                    </div>
                    <div>
                        <label class="block text-xs text-gray-600">Vienība</label>
                        <input asp-for="Specs[i].Unit" class="w-full border rounded px-2 py-1 text-sm spec-unit" />
                    </div>
                </div>
            }
        </div>
        <p class="text-xs text-gray-500 mt-1">Atstājiet tukšas rindas, kuras nevēlaties saglabāt.</p>
    </div>

    <div class="mt-4 flex gap-2">
        <button type="submit" class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700">Saglabāt</button>
        <a asp-action="Products" class="px-4 py-1 rounded border border-gray-300">Atpakaļ</a>
    </div>
</form>

@section Scripts {
    <script>
        (function () {
            const specRows = document.getElementById('specRows');
            if (!specRows) return;

            const getNextIndex = () => Number(specRows.getAttribute('data-next-index') || '0');
            const setNextIndex = (value) => specRows.setAttribute('data-next-index', String(value));

            const wireRow = (row) => {
                const inputs = row.querySelectorAll('input.spec-name, input.spec-value, input.spec-unit');
                inputs.forEach(i => i.addEventListener('input', ensureExtraRow));
            };

            const isRowFilled = (row) => {
                const name = row.querySelector('input.spec-name');
                const value = row.querySelector('input.spec-value');
                const unit = row.querySelector('input.spec-unit');
                return Boolean(
                    (name && name.value.trim().length > 0) ||
                    (value && value.value.trim().length > 0) ||
                    (unit && unit.value.trim().length > 0)
                );
            };

            const addRow = () => {
                const i = getNextIndex();
                const productId = @Model.Product.Id;

                const wrapper = document.createElement('div');
                wrapper.className = 'grid grid-cols-3 gap-2';
                wrapper.innerHTML = `
                    <input type="hidden" name="Specs[${i}].Id" value="0" />
                    <input type="hidden" name="Specs[${i}].ProductId" value="${productId}" />
                    <div>
                        <label class="block text-xs text-gray-600">Nosaukums</label>
                        <input name="Specs[${i}].SpecName" class="w-full border rounded px-2 py-1 text-sm spec-name" />
                    </div>
                    <div>
                        <label class="block text-xs text-gray-600">Vērtība</label>
                        <input name="Specs[${i}].SpecValue" class="w-full border rounded px-2 py-1 text-sm spec-value" />
                    </div>
                    <div>
                        <label class="block text-xs text-gray-600">Vienība</label>
                        <input name="Specs[${i}].Unit" class="w-full border rounded px-2 py-1 text-sm spec-unit" />
                    </div>
                `;

                specRows.appendChild(wrapper);
                wireRow(wrapper);
                setNextIndex(i + 1);
            };

            const ensureExtraRow = () => {
                const rows = Array.from(specRows.children);
                const lastRow = rows[rows.length - 1];
                if (!lastRow) return;
                if (isRowFilled(lastRow)) {
                    addRow();
                }
            };

            // Wire up existing rows and ensure there's at least one empty row.
            Array.from(specRows.children).forEach(wireRow);
            ensureExtraRow();
        })();
    </script>
}

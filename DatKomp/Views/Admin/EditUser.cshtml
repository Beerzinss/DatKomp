@model DatKomp.Models.AdminUserEditViewModel

@{
    ViewData["Title"] = Model.Id == 0 ? "Jauns lietotājs" : "Rediģēt lietotāju";
}

<h1 class="mb-4 text-2xl font-bold">@ViewData["Title"]</h1>

<form asp-action="EditUser" method="post" class="space-y-4">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

    <div>
        <label asp-for="FirstName" class="block font-semibold mb-1"></label>
        <input asp-for="FirstName" class="w-full border rounded px-2 py-1" />
        <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="LastName" class="block font-semibold mb-1"></label>
        <input asp-for="LastName" class="w-full border rounded px-2 py-1" />
        <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Email" class="block font-semibold mb-1"></label>
        <input asp-for="Email" class="w-full border rounded px-2 py-1" />
        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
    </div>

    <div class="flex items-center gap-2">
        <input asp-for="IsAdmin" />
        <label asp-for="IsAdmin" class="font-semibold"></label>
        <span asp-validation-for="IsAdmin" class="text-red-600 text-sm"></span>
    </div>

    <div class="grid grid-cols-2 gap-4">
        <div>
            <label asp-for="Password" class="block font-semibold mb-1"></label>
            <input asp-for="Password" class="w-full border rounded px-2 py-1" />
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword" class="block font-semibold mb-1"></label>
            <input asp-for="ConfirmPassword" class="w-full border rounded px-2 py-1" />
            <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
        </div>
    </div>

    <div class="mt-4 flex gap-2">
        <button type="submit" class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700">Saglabāt</button>
        <a asp-action="Users" class="px-4 py-1 rounded border border-gray-300">Atpakaļ</a>
    </div>
</form>

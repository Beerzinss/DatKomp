@model IEnumerable<DatKomp.Models.AppUser>

@using System.Security.Claims

@{
    ViewData["Title"] = "Lietotāji";
}

<h1 class="mb-4 text-2xl font-bold">Reģistrētie lietotāji</h1>

@if (TempData["AdminFlash"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="mb-3 rounded border border-green-200 bg-green-50 px-3 py-2 text-green-800 text-sm">
        @msg
    </div>
}

<p class="mb-3">
    <a class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700" asp-action="EditUser">Pievienot lietotāju</a>
</p>

@{
    var currentUserIdString = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var currentUserId = int.TryParse(currentUserIdString, out var tmp) ? tmp : 0;
}

<div class="w-full overflow-x-auto">
    <table class="table-auto w-full border-collapse">
        <thead>
            <tr class="border-b">
                <th class="text-left py-2 px-2">ID</th>
                <th class="text-left py-2 px-2">Vārds</th>
                <th class="text-left py-2 px-2">Uzvārds</th>
                <th class="text-left py-2 px-2">E-pasts</th>
                <th class="text-left py-2 px-2">Admin</th>
                <th class="text-left py-2 px-2">Darbības</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var u in Model)
        {
            <tr class="border-b">
                <td class="py-2 px-2">@u.Id</td>
                <td class="py-2 px-2">@u.FirstName</td>
                <td class="py-2 px-2">@u.LastName</td>
                <td class="py-2 px-2">@u.Email</td>
                <td class="py-2 px-2">@(u.IsAdmin ? "Jā" : "Nē")</td>
                <td class="py-2 px-2">
                    <a class="text-blue-600 hover:underline mr-2" asp-action="EditUser" asp-route-id="@u.Id">Rediģēt</a>
                    @if (u.Id != currentUserId)
                    {
                        <form asp-action="DeleteUser" method="post" class="inline">
                            <input type="hidden" name="id" value="@u.Id" />
                            <button type="submit" class="text-red-600 hover:underline" onclick="return confirm('Vai tiešām dzēst šo lietotāju?');">Dzēst</button>
                        </form>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
